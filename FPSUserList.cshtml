@page
@model FPSUserListModel
@{
    ViewData["Title"] = "FPS UserList";
    Layout = "_FPSLayout";
}

<!-- Title and Spacing -->
<div class="d-flex justify-content-between align-items-center mt-2">
    <h3 class="mb-0">@ViewData["Title"]</h3>
</div>

<!-- Card for User List -->
<div class="userList-card bg-white mx-auto mt-4 mb-4">
    <div class="userList-header p-2">
    </div>

    <div class="card-body p-2">
        <!-- Scrollable Table Container -->
        <div class="table-responsive table-wrapper">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Designation Role</th>
                        <th>Unit Office Campus</th>
                        <th>Responsible Unit</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users != null)
                    {
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>@user.DesignationRole</td>
                                <td>@user.UnitOfficeCampus</td>
                                <td>@user.ResponsibleUnit</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Container for User list header */
    .userList-header {
        background-color: #660000 !important;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    /* Container for User list card */
    .userList-card {
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08), 0 6px 6px rgba(0, 0, 0, 0.04);
        width: 75rem;
        max-height: 35rem;
        overflow: hidden;
    }

    /* Scrollable table body */
    .table-wrapper {
        max-height: 28rem;
        overflow-y: auto;
    }

    /* Keep table headers fixed */
    .table thead th {
        position: sticky;
        top: 0;
        z-index: 1;
        background: #f8f9fa;
    }

    /* Custom rounded styling for the table */
    .table {
        border-radius: 8px;
    }
</style>
