@page
@model GADApplication.Pages.GADO.AvailableMandate.IndexUserModel

@{
    ViewData["Title"] = "Mandates";
    Layout = "_FPSLayout";
}

<!-- Header Section with Title -->
<div class="d-flex justify-content-between align-items-center mt-2">
    <h3 class="mb-0">@ViewData["Title"]</h3>
</div>

<!-- Card Container for Table -->
<div class="mandates-card bg-white mx-auto mt-4 mb-4">
    <div class="mandates-header p-2"></div>

    <div class="card-body mx-auto p-2">
        <!-- Scrollable Table Container -->
        <div class="table-responsive table-wrapper">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>

                        <th class="col-md-2">Republic Act</th>
                        <th>Description</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model.AvailableMandates != null && Model.AvailableMandates.Any())
                    {
                        @foreach (var item in Model.AvailableMandates)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.RepublicActAvailable)</td>
                                <td>@Html.DisplayFor(modelItem => item.DescriptionAvailable)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-center text-muted">No available mandates found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    /* Container for Mandates list header */
    .mandates-header {
        background-color: #660000;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    /* Container for Mandates list table */
    .mandates-card {
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08), 0 6px 6px rgba(0, 0, 0, 0.04);
        width: 75rem;
        max-height: 35rem;
        overflow: hidden;
    }

    /* Scrollable table body */
    .table-wrapper {
        max-height: 28rem;
        overflow-y: auto;
        overflow-x: hidden;
    }

    /* Keep the table header fixed */
    .table thead th {
        position: sticky;
        top: 0;
        z-index: 1;
    }

    /* Custom rounded styling for the table */
    .table {
        border-radius: 8px;
    }
</style>
