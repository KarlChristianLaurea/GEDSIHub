
@page
@model GADApplication.Pages.GADO.AvailableMandate.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "_GADOLayout";
}

<!-- Container for title and button on the same line -->
<div class="d-flex justify-content-between align-items-center mt-2">
    <!-- Page Title on the left -->
    <h2 class="mb-0">@ViewData["Title"]</h2>
</div>

<hr />

<div class="detailsMandate-card card shadow-sm mx-auto mb-4" style="max-width: 600px;">
    <div class="detailsMandate-header text-white p-2">
        <span class="mb-0 p-2"></span>
    </div>

    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-bold">
                Republic Act
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.AvailableMandates.RepublicActAvailable)
            </dd>
            <dt class="col-sm-4 fw-bold">
                Description
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.AvailableMandates.DescriptionAvailable)
            </dd>
        </dl>
    </div>

    <!-- Action Buttons Below the Card -->
    <div class="card-footer d-flex justify-content-end">
        <!-- Back to List Button with Tooltip -->
        <a asp-page="./Index" class="btn btn-cancel d-flex align-items-center me-2" data-bs-toggle="tooltip" title="Back to list">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>

        <!-- Save Button with tooltip -->
        <a asp-page="./Edit" asp-route-id="@Model.AvailableMandates.Id" class="btn btn-edit rounded-3 d-flex align-items-center" data-bs-toggle="tooltip" title="Add new mandate">
            <i class="bi bi-pencil me-1"></i> Edit
        </a>
    </div>
</div>


<style>
    /* Create Card Heading */
    .detailsMandate-header {
        background-color: #660000 !important; /* background color for header */
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    /* Container for create mandate */
    .detailsMandate-card {
        border-radius: 10px; /* Adjust this value for more or less rounding */
        background-color: #f8f9fa; /* Optional: Light background color */
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
    }

    /* Create Card Heading */
    .card-body {
        padding: 20px;
    }

    /* Buttons styles */
    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px); /* Lift effect */
        }

    /* Add Button */
    .btn-edit {
        background-color: #660000; /* background color for header */
        color: white;
    }

        .btn-edit:hover {
            background-color: lightgray;
        }


</style>