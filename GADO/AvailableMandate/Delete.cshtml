@page
@model GADApplication.Pages.GADO.AvailableMandate.DeleteModel

@{
    ViewData["Title"] = "Delete Mandate";
    Layout = "_GADOLayout";
}

<!-- Card for Deleting Confirmation -->
<div class="deleteMandate-card card mx-auto my-auto">
    <div class="deleteMandate-header text-white p-2">
        <h5 class="mb-0">Confirm Deletion</h5>
    </div>

    <div class="card-body">
        <h5 class="text-center mb-4">Are you sure you want to delete this mandate?</h5>

        <!-- Mandate Details -->
        <dl class="row">
            <dt class="col-sm-3 text-muted">Republic Act</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.AvailableMandates.RepublicActAvailable)</dd>
            <dt class="col-sm-3 text-muted">Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.AvailableMandates.DescriptionAvailable)</dd>
        </dl>
    </div>

    <!-- Action Buttons -->
    <div class="card-footer d-flex justify-content-end">
        <a asp-page="./Index" class="btn btn-cancel me-2">Cancel</a>
        <form method="post" class="d-inline">
            <input type="hidden" asp-for="AvailableMandates.Id" />
            <button type="submit" class="btn btn-delete rounded-3">Delete</button>
        </form>
    </div>
</div>


<style>
    .deleteMandate-card{
        border-radius: 10px;
        width: 35rem;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
    }
    .deleteMandate-header{
        background-color: #660000 !important; /* background color for header */
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    /* Buttons styles */
    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px); /* Lift effect */
        }

    /* Add Button */
    .btn-delete {
        background-color: #660000; /* background color for header */
        color: white;
    }

        .btn-delete:hover {
            background-color: lightgray;
        }
</style>
