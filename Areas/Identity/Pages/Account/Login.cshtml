@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Imported fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Staatliches&display=swap" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <title>@ViewData["Title"] Login </title>

    <style>
        /* General styling */
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }

        /* Background image */
        .background {
            background-image: url('/images/landing.png'); /* Replace with your image path */
            background-size: cover;
            background-position: center;
            height: 100vh;
        }

        /* Input field styling */
        .form-control {
            border-radius: 8px;
            padding: 15px;
            border: 1px solid #B7BAC7;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        /* Login form container */
        .login-container {
            height: 100%;
            max-width: 480px;
            width: 100%;
            padding: 2rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            background: rgba(255, 255, 255, 0.75);
            backdrop-filter: blur(10px);
        }

        .form-floating > .form-control,
        .form-floating > .form-select {
            padding: 1.25rem 0.75rem;
            height: calc(3.5rem + 2px);
            background: rgba(255, 255, 255, 0.9);
        }
    </style>
</head>

<body>
    <div class="background d-flex align-items-center justify-content-end">
        <!-- Login form container -->
        <div class="login-container text-center">
            <div class="text-center mt-5 mb-0">
                <!-- logo path -->
                <img src="/images/GEDSI Hub logo.png" alt="GEDSI HUB Logo" width="130">
                <h2 class="fw-bold" style="font-family: 'Staatliches', sans-serif;">GEDSI HUB</h2>
            </div>
            <p class="text-center fs-6 mt-4">Sign in to start your session</p>

            <!-- Login Form -->
            <form id="account" method="post" autocomplete="on">

                <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                <!-- Email input -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="Webmail" required />
                    <label asp-for="Input.Email">Webmail</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password input -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" aria-required="true" placeholder="Password" required />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember Me -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                    </div>
                </div>

                <!-- Sign in Button -->
                <button id="login-submit" type="submit" class="btn btn-primary btn-signin w-100">Sign in</button>
            </form>
        </div>
    </div>

    <!-- Loading Modal -->
    <div class="modal fade" id="loadingModal" tabindex="-1" role="dialog" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content bg-transparent border-0">
                <div class="modal-body text-center">
                    <div class="spinner-border text-danger" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3 text-danger">Signing in, please wait...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById('account').addEventListener('submit', function (event) {
            // Show the loading modal
            var loadingModal = new bootstrap.Modal(document.getElementById('loadingModal'));
            loadingModal.show();

            // Disable the submit button to prevent multiple clicks
            document.getElementById('login-submit').disabled = true;
        });
    </script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
