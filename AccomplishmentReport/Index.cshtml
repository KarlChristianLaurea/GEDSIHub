@page
@model GADApplication.Pages.AccomplishmentPage.IndexModel
@{
    ViewData["Title"] = "Accomplishment Reports";
}

<h1 class="text-center mb-4">Accomplishment Reports</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- Add a button to create a new accomplishment report -->
            <a class="btn btn-primary mb-3" asp-page="./CreateAccomplishmentReport" role="button">Create New Accomplishment Report</a>

            <!-- Display the list of existing accomplishment reports -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>GPB ID</th>
                        <th>Report Date</th>
                        <th>Number of Activities</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model.AccomplishmentReports)
                    {
                        <tr>
                            <td>@report.GPBId</td>
                            
                            <td>@report.ActivityAccomplishments.Count</td>
                            <td>
                                <a asp-page="./Details" asp-route-gpbId="@report.GPBId" class="btn btn-info">View</a>



                                <a asp-page="./Details" asp-route-id="@report.Id" class="btn btn-info">Details</a>
                                <a asp-page="./Edit" asp-route-id="@report.Id" class="btn btn-warning">Edit</a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@report.Id" class="d-inline">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this report?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
